// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    // NOTE: When using postgresql, mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

model Example {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

// Necessary for Next auth
model Account {
    id                String  @id @default(auto()) @map("_id") @db.ObjectId
    userId            String  @db.ObjectId
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? // @db.Text
    access_token      String? // @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? // @db.Text
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(auto()) @map("_id") @db.ObjectId
    sessionToken String   @unique
    userId       String   @db.ObjectId
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(auto()) @map("_id") @db.ObjectId
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]
    sessions      Session[]
}

model VerificationToken {
    id         String @id @default(auto()) @map("_id") @db.ObjectId
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model Student {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    dateOfBirth String
    name        String
    slug        String
    email       String
    password    String
    phone       Int
    parent      String
    gender      String
    admissionId String
    subjects    Subject[]
    exams       Exam[]
    fees        Fee[]
}
model Teacher {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    dateOfBirth String
    joiningDate String
    name        String
    slug        String
    email       String
    password    String
    phone       Int
    parent      String
    gender      String
    qualification String
    Lessons     lesson[]
    tasks       Task[]
}

model Admin {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    name        String
    slug        String
    email       String
    password    String
    phone       Int
}

model Exam {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    name        String
    slug        String
    term        String
    results     Json
    examDate    String
    student     Student @relation(fields: [studentId], references: [id])
    studentId   String @unique @db.ObjectId
}

model Fee {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    name        String
    slug        String
    term        String
    type        String
    amount      String
    payday      String
    student     Student @relation(fields: [studentId], references: [id])
    studentId   String @unique @db.ObjectId
}

model Stream {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    name        String
    slug        String
    lessons     lesson[]
    tasks       Task[]
}

model lesson {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    day         String
    startTime   String
    endTime     String
    subject     Subject
    attendance  String
    stream      Stream @relation(fields: [streamId], references: [id])
    streamId    String @unique @db.ObjectId
    teacher     Teacher @relation(fields: [teacherId], references: [id])
    teacherId   String @unique @db.ObjectId
}

model Task {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    name        String
    description String
    subject     Subject
    stream      Stream @relation(fields: [streamId], references: [id])
    streamId    String @unique @db.ObjectId
    teacher     Teacher @relation(fields: [teacherId], references: [id])
    teacherId   String @unique @db.ObjectId
}

type Subject {
    name String
    slug String
}